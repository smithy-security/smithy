CONTAINER_REPO=
SMITHY_VERSION=
SOURCE_CODE_REPO=
BUILD_ARCHITECTURE=

DOCKER=docker

extras:
	$(MAKE) -C ./runner container \
		BUILD_ARCHITECTURE=$(BUILD_ARCHITECTURE) \
		CONTAINER_REPO=$(CONTAINER_REPO) \
		SMITHY_VERSION=$(SMITHY_VERSION)
	
publish-extras:
	$(MAKE) -C ./runner publish 	\
		BUILD_ARCHITECTURE=$(BUILD_ARCHITECTURE) \
		CONTAINER_REPO=$(CONTAINER_REPO) \
		SMITHY_VERSION=$(SMITHY_VERSION)
