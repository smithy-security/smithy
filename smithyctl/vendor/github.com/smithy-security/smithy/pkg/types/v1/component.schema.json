{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["name", "description", "type", "steps"],
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": [
        "target",
        "scanner",
        "enricher",
        "filter",
        "reporter"
      ]
    },
    "parameters": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["string", "const:string", "list:string"]
          },
          "value": {
            "oneOf": [
              { "type": "string" },
              {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            ]
          }
        }
      }
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "executable", "image"],
        "properties": {
          "name": {
            "type": "string"
          },
          "args": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "env_vars": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            }
          },
          "executable": {
            "type": "string"
          },
          "image": {
            "type": "string",
            "pattern": "^(?:[a-zA-Z0-9._-]+(?:/[a-zA-Z0-9._-]+)*)(?::[a-zA-Z0-9._-]+|@sha256:[a-fA-F0-9]{64})?$"
          },
          "script": {
            "type": "string"
          }
        }
      }
    }
  },
  "additionalProperties": false
}
